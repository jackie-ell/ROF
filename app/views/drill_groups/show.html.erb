
<div class='container top-page-padding'>
  <div class="title-container">
    <h1 class="drillgrouptitle"><%= @drillgroup.category.titleize %> | <%= @drillgroup.difficulty.capitalize %></h1>
    <% if current_user.is_admin %>
      <%= link_to 'Add New Question', new_drill_group_question_path(@drillgroup) , class: "btn btn-default red-button top-button-margin" %>
    <% end %>
  </div>
<% @questions.each do |f| %>
  <div class="col-md-12 drill-group-spacing">
    <div class="drill-group">
      <div class="col-sm-2">
        <% case @logocat %>
        <% when "JavaScript"  %>
        <%= image_tag 'logo/javascript.png', class:"" %>
        <% when "Ruby" %>
        <%= image_tag 'logo/ruby.png', class:"" %>
        <% when "RoR" %>
        <%= image_tag 'logo/rails.png', class:"" %>
        <% when 'Python' %>
        <%= image_tag 'logo/python.png', class:""  %>
        <% when 'Node' %>
        <%= image_tag 'logo/node.png', class:"" %>
        <% when 'HTML'  %>
        <%= image_tag 'logo/html.png', class:"" %>
        <% when 'CSS' %>
        <%= image_tag 'logo/css.png', class:"" %>
        <% when 'jQuery'%>
        <%= image_tag 'logo/jquery.png', class:"" %>
        <% else %>
        <%= image_tag 'logo/default.png', class:"" %>
        <% end %>
      </div>

      <div class="col-sm-8">
        <p><%= f.title %></p>
        <h3>  <%= f.description %> </h3>
        <p>Points: <%= f.points %> </p>

      </div>


      <div class="col-sm-2">
       <!--  <button type="button" class="btn btn-default red-button top-button-margin">Enter</button> -->
        <%= button_to 'Enter',  question_path(f) , method: :get, class: "btn btn-default red-button top-button-margin"%>
      </div>
    </div>
  </div>
<% end %>

</div>
